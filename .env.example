# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/hul_distribution

# JWT Configuration
JWT_ACCESS_SECRET=your-super-long-random-jwt-access-secret-key-here
JWT_REFRESH_SECRET=your-super-long-random-jwt-refresh-secret-key-here
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username-or-api-key
SMTP_PASS=your-smtp-password-or-api-key
EMAIL_FROM="HUL Distribution <noreply@hulagency.com>"

# Expiry Settings
NEAR_EXPIRY_DAYS=7
NEAR_EXPIRY_DISCOUNT_PERCENT=20

# Client Configuration
CLIENT_URL=http://localhost:5000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# Development/Production
NODE_ENV=development
PORT=5000
